@using X.PagedList;
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<EntityLayer.AppUser>
@{
    ViewData["Title"] = "AllUsers";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
 
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-12">
                    <!-- USERS LIST -->


                    <div class="box box-danger">
                        <div class="box-header with-border">
                            <h3 class="box-title"> Kayıtlı Kullanıcılar</h3>

                         
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body no-padding">
                            <ul class="users-list clearfix">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <img src="https://secure.gravatar.com/avatar/@item.EmailHash?s=200" alt="User Image">
                                            <a class="users-list-name" href="/Member/Memberdetails/@item.Id">@item.UserName</a>
                                        <span class="users-list-date">@item.UserCreateDate.ToString("dd MMMM yyyy")</span>
                                    </li>

                                    
                                }


                            </ul>
                            <!-- /.users-list -->
                        </div>
                        <!-- /.box-body -->
                     
                        <!-- /.box-footer -->
                    </div>
                    <!--/.box -->
                </div>

            </div>      
        </div>    
    </div>
</section>



<div class="product__pagination" style="margin: 2% 35%">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Animelers", new { page }), new PagedListRenderOptions
    {
    LiElementClasses = new string[] { "page-item" },
    PageClasses=new string[] {"current-page"},
    UlElementClasses = new string[] { "pagination justify-content-center" },
    //PageClasses = new string[] { "page-link" },
    //Display = PagedListDisplayMode.IfNeeded
    })
</div>
