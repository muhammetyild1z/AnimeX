@model EntityLayer.Categories

@{
    ViewData["Title"] = "CategoryEdit";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="box box-primary">

        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" method="post" class="container">
            <div class="box-body">
                <div class="form-group">
                    <label>Kategorinin Adı</label>
                    <input type="text" asp-for="KategoriAdi" value="@Model.KategoriAdi" class="form-control" >
                </div>

                <div class="form-group">
                    <label>Kategorinin Durumu</label>
                    <select asp-for="Status" class="form-control" selected="@Model.Status">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>

            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
            </div>
        </form>
    </div>

</section>

