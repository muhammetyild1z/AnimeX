@model List<EntityLayer.Animeler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}
<head>

    <link href="~/animeX/css/main.min.css" rel="stylesheet" />
    <link href="~/animeX/css/style1.css" rel="stylesheet" />
</head>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./categories.html">Categories</a>
                    <span>Romance</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Product Section Begin -->
<section class="product-page spad">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("_kategoriler")

            <div class="col-lg-10">
                <div class="product__page__content">
                    <div class="product__page__title">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-6">
                                <div class="section-title">
                                    <h4>Keşfet</h4>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="@item.AnimeImg">

                                        <div class="ep fa fa-star">&nbsp;@item.IMDb</div>
                                        <div class="comment"><i class="fa fa-comments"></i> 11</div>
                                        <div class="view"><i class="fa fa-calendar"></i> @item.AnimeCikisTarihi.Year</div>
                                    </div>
                                    <div class="product__item__text align-content-md-center">
                                        <ul class="float-left ml-1">
                                        @await Component.InvokeAsync("_AnimelerKategori", new{animeID=item.AnimeID})

                                        <h5><a href="#">@item.AnimeAdi</a></h5>
                                        </ul>
                                    </div>

                                </div>
                            </div>

                        }


                    </div>



                </div>
            </div>

        </div>
        <div class="product__pagination  " style="margin: 10% 35%">
            <a href="#" class="current-page">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#">4</a>
            <a href="#">5</a>
            <a href="#"><i class="fa fa-angle-double-right"></i></a>
        </div>

    </div>
    </div>
</section>
<!-- Product Section End -->
