@model EntityLayer.Animeler
@{
    ViewData["Title"] = "Izle";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<style>


    img {
        border: 1px solid black;
        margin-right: 20px;
    }

    .base img {
        width: 100%;
        max-height: 900px
    }

    .cover img {
        object-fit: cover;
    }
</style>


<section class="base cover" style="    max-height: 340px;">

    <img style="" src="@Model.AnimeKapakImg" class="img-fluid" alt="Responsive image">

</section>

@await Component.InvokeAsync("_AnimeDetay" ,new { animeID=Model.AnimeID})

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Home/Index/"><i class="fa fa-home"></i> Anasayfa</a>
                    <a href="/Animeler/Index/">Anime İzle</a>
                    <span>@Model.AnimeAdi</span>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Anime Section Begin -->
<section class="anime-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 ">


              @await Component.InvokeAsync("_AnimeIzleSezonlar" ,new { animeID=Model.AnimeID})


            </div>
        </div>

        @await Component.InvokeAsync("_Comments" ,new { animeID=Model.AnimeID})
    </div>
</section>
<!-- Anime Section End -->
