@model List<EntityLayer.Animeler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<section class="blog spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-6">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-12">
                            <div class="blog__item set-bg" data-setbg="@item.AnimeImg">
                                <div class="blog__item__text">
                                    <p><span class="icon_calendar"></span> @item.AnimeCikisTarihi.ToString("dd MMMM yyyy")</p>
                                    <h4><a href="#">@item.AnimeAdi</a></h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
