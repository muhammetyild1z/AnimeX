@model EntityLayer.AppUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}


<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row mt-5">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="@Model.UserImg">
                    </div>
                </div>
                <div class="anime__details__text col-lg-4 mt-4">
                    <div class="anime__details__title">
                        <h3>@User.Identity.Name</h3>
                        <span><i class="fa fa-info mr-2"></i>Hakkımda</span>

                        <p>
                           @Model.Details
                        </p>


                        <p>
                            <i class="fa fa-calendar"></i> Kayıt tarihi: @Model.UserCreateDate.ToString("dd MMMM yyyy")
                        </p>
                        <div class="anime__details__btn mt-5">
                            <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Follow</a>
                            <a href="#" class="watch-btn">
                                <span>Profili Düzenle</span> <i class="fa fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div class="section-title">
                    <h4><i class="fa fa-heart-o"></i>&nbsp;Favori Animelerim</h4>

                </div>
            </div>

        </div>
        <section class="product spad" style="max-width:80%; position: relative;  margin: auto;">
            <div class="container">
                <div class="row">
        @await Component.InvokeAsync("_FavoriAnimeler" new {UserName=User.Identity.Name})
                </div>
            </div>
        </section>
      



        <div class="row">
            <div class="col-lg-8 col-md-8">
                <div class="anime__details__review">
                    <div class="section-title">
                        <h5>Son Yaptigin Yorumlar</h5>
                    </div>
                    <div class="anime__review__item">
                        <div class="anime__review__item__pic">
                            <img src="https://r.resimlink.com/liu8Qk.jpg" alt="">
                        </div>
                        <div class="anime__review__item__text">
                            <h6> <span>1 Hour ago</span></h6>
                            <p>
                                whachikan Just noticed that someone categorized this as belonging to the genre
                                "demons" LOL
                            </p>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>


