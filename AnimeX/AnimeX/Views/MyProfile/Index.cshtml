@model EntityLayer.AppUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}


<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row mt-5 d-flex justify-content-center">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg rounded-circle" data-setbg="@Model.UserImg">
                    </div>
                </div>
                <div class="anime__details__text col-lg-4 mt-4">
                    <div class="anime__details__title">
                        <h3>@User.Identity.Name</h3>
                        <span><i class="fa fa-info mr-2"></i>Hakkımda</span>

                        <p>
                            @Model.Details
                        </p>


                        <p>
                            <i class="fa fa-calendar"></i> Kayıt tarihi: @Model.UserCreateDate.ToString("dd MMMM yyyy")
                        </p>
                        <div class="anime__details__btn mt-5">
                            <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Follow</a>
                            
                            <a class="watch-btn" href="/MyProfile/ProfileEdit">
                               
                                <span>Profili Düzenle</span> <i class="fa fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>




        <section class="product spad" style="max-width:80%; position: relative;  margin: auto;">
            <div class="container">
                <div class="row">
             
                    @await Component.InvokeAsync("_FavoriAnimeler" ,new {UserName=User.Identity.Name})
                </div>
            </div>
        </section>



        @await Component.InvokeAsync("_UserFavoriComment",new {id=Model.Id})
     
    </div>
</section>


