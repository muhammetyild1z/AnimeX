@model EntityLayer.Animeler

<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row " style="margin-left: 2%;">
                <div class="col-lg-2">
                    <div class="anime__details__pic set-bg" data-setbg="@Model.AnimeImg">
                        <div class="comment"><i class="fa fa-heart"></i> @Model.Like</div>
                        <div class="view"><i class="fa fa-comment"></i> @ViewBag.CommentCount</div>
                          <div class="anime__details__btn d-flex justify-content-center " >
                        <a href="/AnimeIzle/Izle/@Model.AnimeID" class="follow-btn"><i class="fa fa-heart-o"></i> Favoriye Ekle</a>
                    </div>
                    </div>
                  
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Model.AnimeAdi</h3>
                            <span>@Model.AnimeKisaDetay</span>
                        </div>
                        <div class="anime__details__rating">
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-half-o"></i></a>
                            </div>
                            <span>1.029 Votes</span>
                        </div>
                        <p>
                            @Model.AnimeDetay
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Uyarlama:</span> @Model.AnimeUyarlamasi</li>
                                        <li><span>IMDb:</span> @Model.IMDb</li>
                                        <li><span>Çıkış Yılı:</span> @(((DateTime)Model.AnimeCikisTarihi).ToString("MMMM yyyy"))</li>

                                    </ul>
                                    <span class="text-white font-weight-bold">Kategori:</span>
                                    <ul class="row">
                                        @await Component.InvokeAsync("_AnimeDetayKategori",new {animeID=Model.AnimeID})
                                    </ul>
                                      
                                  
                                   
                                </div>                                                                                                                                                                 

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>