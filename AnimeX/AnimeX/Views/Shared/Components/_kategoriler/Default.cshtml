@model List<EntityLayer.Categories>

<div class="widget widget-collapsible col-md-2 mt-5">
    <h3 class="widget-title ml-3">
        <span class="text-white" data-toggle="collapse" href="#widget-1" role="button" aria-expanded="true" aria-controls="widget-1" style="font-family:sans-serif">
            Kategoriler
        </span>
        <hr style="height:2px;border-width:0;color:gray;background-color:white">
    </h3><!-- End .widget-title -->

    <div class="collapse show ml-4 text-white" id="widget-1">
        <div class="widget-body">
            <div class="filter-items filter-items-count text-white">
               
                    <form>
                    @foreach (var item in Model)
                    {
                        <div class="form-check mt-1">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                @item.KategoriAdi
                            </label>
                        </div>
                    }
                    <button class="btn btn-outline-light mt-4" type="submit">Sonuçları Listele</button>
                    </form>

              

                <!-- End .filter-item -->


            </div><!-- End .filter-items -->
        </div><!-- End .widget-body -->
    </div><!-- End .collapse -->
</div><!-- End .widget -->